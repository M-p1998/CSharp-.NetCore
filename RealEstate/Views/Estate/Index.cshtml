@model List<Estate>


<partial name="_Notification"/>

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Estate List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Estate" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i>Create new homes
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Home Name
                    </th>
                    <th>
                        Home Address
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Name))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Address</td>
                        <td>@obj.Description</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Estate" asp-action="Edit" asp-route-id="@obj.Estate_Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-controller="Estate" asp-action="Delete" asp-route-id="@obj.Estate_Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                                

                            </div>

                               
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
