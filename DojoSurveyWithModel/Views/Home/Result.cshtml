@model DojoSurveyWithModel.Models.Survey

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey Index</title>
</head>
<body>
    <div class="result">
        <h3>Submitted Info</h3>
        <p>Name: @Model.Name</p>
        <p>Dojo Location: @Model.Location</p>
        <p>Favorite Language: @Model.Language</p>
        @if(Model.Comment != null){
            <p>Comment: @Model.Comment</p>
        }

        <a href="/">Go Back </a>
    </div>
</body>
</html>