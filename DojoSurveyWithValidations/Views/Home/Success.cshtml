@model DojoSurveyWithValidations.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey</title>
</head>
<body>
    
    <div class="res">
        <h3> Submitted Info</h3>
        <p> Your Name: @Model.YourName</p>
        <p> Dojo Location: @Model.Location</p>
        <p> Favorite Language: @Model.Language</p>
        @if(Model.Comment != null){
            <p> Comment: @Model.Comment</p>
        }
        <a href="/">Go back</a>
        
    </div>
    
</body>
</html>